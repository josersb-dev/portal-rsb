<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" description="COM_NOTICIASRSB_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_NOTICIASRSB_FILTER_STATE"
               description="COM_NOTICIASRSB_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        <field name="destaque" label="COM_NOTICIASRSB_FORM_LBL_ITEM_DESTAQUE" type="list" onchange="this.form.submit();" default="COM_NOTICIASRSB_ITEMS_DESTAQUE_FILTER">
  <option value="">COM_NOTICIASRSB_ITEMS_DESTAQUE_FILTER</option>
  <option value="0">COM_NOTICIASRSB_ITEMS_DESTAQUE_OPTION_0</option>
  <option value="1">COM_NOTICIASRSB_ITEMS_DESTAQUE_OPTION_1</option>
</field>
<field name="data.from" label="COM_NOTICIASRSB_ITEMS_DATA_FILTER_FROM" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="true" translateformat="true" hint="COM_NOTICIASRSB_ITEMS_DATA_FILTER_FROM"/>
<field name="data.to" label="COM_NOTICIASRSB_ITEMS_DATA_FILTER_TO" type="calendar" onchange="this.form.submit();" filter="safehtml" class="inputbox" showtime="true" translateformat="true" hint="COM_NOTICIASRSB_ITEMS_DATA_FILTER_TO"/>
<field name="id_segmento" label="COM_NOTICIASRSB_FORM_LBL_ITEM_ID_SEGMENTO" type="category" extension="com_noticiasrsb.items" onchange="this.form.submit();" default="">
  <option value=""/>
  <option value="">JOPTION_SELECT_CATEGORY</option>
</field>


    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_NOTICIASRSB_LIST_FULL_ORDERING"
               description="COM_NOTICIASRSB_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.id ASC">COM_NOTICIASRSB_ID_ASC</option><option value="a.id DESC">COM_NOTICIASRSB_ID_DESC</option><option value="a.state ASC">COM_NOTICIASRSB_STATE_ASC</option><option value="a.state DESC">COM_NOTICIASRSB_STATE_DESC</option><option value="a.ordering ASC">COM_NOTICIASRSB_ORDERING_ASC</option><option value="a.ordering DESC">COM_NOTICIASRSB_ORDERING_DESC</option><option value="a.destaque ASC">COM_NOTICIASRSB_DESTAQUE_ASC</option><option value="a.destaque DESC">COM_NOTICIASRSB_DESTAQUE_DESC</option><option value="a.data ASC">COM_NOTICIASRSB_DATA_ASC</option><option value="a.data DESC">COM_NOTICIASRSB_DATA_DESC</option><option value="a.resumo ASC">COM_NOTICIASRSB_RESUMO_ASC</option><option value="a.resumo DESC">COM_NOTICIASRSB_RESUMO_DESC</option><option value="a.id_segmento ASC">COM_NOTICIASRSB_ID_SEGMENTO_ASC</option><option value="a.id_segmento DESC">COM_NOTICIASRSB_ID_SEGMENTO_DESC</option><option value="a.publicar_em ASC">COM_NOTICIASRSB_PUBLICAR_EM_ASC</option><option value="a.publicar_em DESC">COM_NOTICIASRSB_PUBLICAR_EM_DESC</option><option value="a.titulo ASC">COM_NOTICIASRSB_TITULO_ASC</option><option value="a.titulo DESC">COM_NOTICIASRSB_TITULO_DESC</option>

        </field>

       <field name="limit"
               type="limitbox"
               label="COM_NOTICIASRSB_LIST_LIMIT"
               description="COM_NOTICIASRSB_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>